---
/* eslint max-lines: 'off' */

import {asset} from "../lib/data.js";
import {API_URL} from "../app/constants";

const noticeList = await fetch(`${API_URL}/list/noticeList`).then((response) => response.json());

const Notices = await noticeList?.data.filter((item, idx) => idx < 5).map((notice) => {
	return {
		id: notice.noticeSeq,
		title: notice.subject,
		content: notice.content,
		createdAt: notice.regDate,
	};
});
